<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--控制app的actionBar的颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--控制状态栏的颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控制页面原生控件的反馈颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--分割线-->
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>
    <style name="text_flag_01">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/flag_01</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="search_product_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/search_tag_text_bg</item>
        <item name="android:textColor">@color/search_product_text_color</item>
    </style>

    <style name="dialog_style">
        <item name="android:windowBackground">@color/publish_dialog_bg</item>
    </style>
</resources>
