<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <!--首页RecyclerView item 详情多布局之post_list 的RecyclerView的item中viewpager的布局-->

    <ImageView
        android:id="@+id/iv_vp_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_personal_wish_item_drawable_night"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:id="@+id/ll_count_tag"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_now_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="1"/>
        <TextView
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"/>
        <TextView
            android:textSize="16sp"
            android:id="@+id/tv_total_pics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2"/>
    </LinearLayout>
</FrameLayout>