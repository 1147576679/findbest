<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white_color"
    android:padding="16dp">
    <!--content_list布局中的（头部）title布局-->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="深的我心的美物NO.2"
        android:textSize="16sp"
        android:textColor="@color/rv_title_color"
        />
    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_right"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原创文章"
            android:padding="4dp"
            android:background="@color/yuanchuang"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/tv_right"
            android:id="@+id/user_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            tools:src="@drawable/ic_pimage_sticker_4_1"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_toRightOf="@id/user_icon"
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="梦中的大猫"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_centerVertical="true"
            android:drawablePadding="4dp"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2000"
            android:drawableLeft="@drawable/ic_topic_list_item_multi_views"/>
    </RelativeLayout>
</LinearLayout>