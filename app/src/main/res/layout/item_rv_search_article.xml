<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center">
    <!--搜索界面 “文章” fragment的RecyclerView item的布局-->
    <ImageView
        android:id="@+id/iv_article_show"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:src="@drawable/bg_personal_wish_item_drawable_day"
        android:layout_margin="@dimen/activity_horizontal_margin"
        />
    <TextView
        android:id="@+id/tv_chinese_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/search_article_chinese_name_color"
        tools:text="设计感"/>
    <TextView
        android:id="@+id/tv_en_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/unselect_search"
        tools:text="Design"/>
</LinearLayout>