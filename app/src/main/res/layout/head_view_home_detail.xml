<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <!--首页RecyclerView item 详情多布局之product_list 的RecyclerView的头部布局-->

    <TextView
        android:padding="@dimen/activity_horizontal_margin"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/rv_detail_title_color"
        tools:text="揭秘冻龄女星机密，让青春超长待机"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:src="@drawable/ic_pimage_sticker_4_1"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2000"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_topic_list_item_multi_views"/>
    </RelativeLayout>
    <TextView
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Abc"
        android:textSize="14sp"
        android:textColor="@color/text_color"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/rv_detail_buy_bg"/>
</LinearLayout>