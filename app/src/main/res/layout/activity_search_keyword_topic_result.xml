<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_keyword_topic_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zjy.bantang.SearchKeywordTopicResultActivity">
    <include layout="@layout/layout_head"
        android:id="@+id/head_layout"/>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/head_layout"
        android:id="@+id/rv_keyword_search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/iv_frame_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/frame_anim"/>
</RelativeLayout>
