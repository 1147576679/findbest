<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white_color">
    <!--首页RecyclerView item 详情多布局之post_list 的RecyclerView的item的布局-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerVertical="true"
            android:id="@+id/user_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:src="@drawable/ic_pimage_sticker_4_1"
            android:layout_marginLeft="16dp"
            />
        <com.example.zjy.widget.PFTextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="花甲少女"
            android:layout_toRightOf="@+id/user_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            />
        <Button
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:id="@+id/btn_focus"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="+关注"
            android:background="@drawable/button_shape"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/frame_layout_vp"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>
    <!--<ImageView-->
        <!--android:id="@+id/iv_big"-->
        <!--android:scaleType="fitXY"-->
        <!--android:src="@drawable/bg_personal_wish_item_drawable_day"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="400dp" />-->
    <com.example.zjy.widget.PFTextView
        android:layout_margin="16dp"
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="abc"/>
    <LinearLayout
        android:id="@+id/ll_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rv_detail_buy_bg">
            <ImageView
                android:id="@+id/iv_small"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                />
            <com.example.zjy.widget.PFTextView
                android:id="@+id/tv_small_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="可莱丝"
                android:layout_toRightOf="@+id/iv_small"
                android:layout_marginLeft="4dp"
                />
            <com.example.zjy.widget.PFTextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="120"
                android:layout_alignLeft="@+id/tv_small_title"
                android:layout_alignBottom="@+id/iv_small"
                android:layout_marginBottom="4dp"/>
            <ImageView
                android:id="@+id/iv_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_product_topic_detail_normal_item_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:background="@color/rv_detail_buy_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            >
            <LinearLayout
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="喜欢"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/ic_topic_list_item_multi_likes"/>
            </LinearLayout>
            <LinearLayout
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center">
                <com.example.zjy.widget.PFTextView
                    android:id="@+id/tv_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/ic_product_topic_detail_normal_item_buy"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/white_color"/>
</LinearLayout>