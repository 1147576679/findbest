<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white_color">
    <!--content_list布局中的（底部）作者和创建的文章的时间的布局-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="16dp">
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12月20日"/>
        <View
            android:layout_gravity="center_vertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider"/>
        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"/>
        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/tv_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="36"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerVertical="true"
            android:id="@+id/user_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:src="@drawable/ic_pimage_sticker_4_1"
            android:layout_marginLeft="16dp"
            />
        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/user_icon"
            android:layout_alignTop="@+id/user_icon"
            android:layout_marginLeft="16dp"
            />
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_author"
            android:layout_alignBottom="@+id/user_icon"
            tools:text="Larry"/>
        <Button
            android:textColor="#fff"
            android:id="@+id/btn_focus"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="+关注"
            android:background="@color/button_focus_bg"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/divider"/>
</LinearLayout>